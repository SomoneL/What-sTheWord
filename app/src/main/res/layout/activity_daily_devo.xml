<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daily_devo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="somoneletman.org.whatstheword.DailyDevo"
    android:background="#FF947F">

    <TextView
        android:text="Daily Devotions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dailyTitle"
        android:textSize="40sp"
        android:textColor="#C1264E"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:text="Stay blessed and enjoy your day! Here is the word for today:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/dailyMsg"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="#C1264E"
        android:layout_below="@+id/dailyTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Take delight in the LORD and he will give you the desires of your heart. -Psalms 37:4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/dbibleVerse"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#523957"
        android:layout_below="@+id/dailyMsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22sp"/>

    <Button
        android:text="Click if you would like another devotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:id="@+id/anotherDaily"
        android:textColor="#523957"
        android:background="#FFCFA4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
