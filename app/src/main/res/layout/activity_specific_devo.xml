<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_specific_devo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="somoneletman.org.whatstheword.SpecificDevo"
    android:background="#FF947F">

    <TextView
        android:text="Specific Devotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/specifcDevoTitle"
        android:textColor="#C1264E"
        android:textSize="40sp"
        android:gravity="center_vertical|center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="How are you feeling? We'll tailor the word specifically for that."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/specificTextView"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#C1264E"
        android:layout_below="@+id/specifcDevoTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Select a specific devotion category below."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textColor="#C1264E"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/specificTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"/>

    <Button
        android:text="Peace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:id="@+id/Peace"
        android:background="#FFCFA4"/>

    <Button
        android:text="Love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Love"
        android:layout_above="@+id/Inspiration"
        android:layout_centerHorizontal="true"
        android:background="#FFCFA4"/>

    <Button
        android:text="Depression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Depression"
        android:background="#FFCFA4"
        android:layout_below="@+id/Forgiveness"
        android:layout_alignLeft="@+id/Forgiveness"
        android:layout_alignStart="@+id/Forgiveness"
        android:layout_marginTop="22dp"/>

    <Button
        android:text="Forgiveness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Forgiveness"
        android:background="#FFCFA4"
        android:layout_below="@+id/Love"
        android:layout_alignLeft="@+id/Love"
        android:layout_alignStart="@+id/Love"
        android:layout_marginTop="18dp"/>

    <Button
        android:text="Strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Strength"
        android:background="#FFCFA4"
        android:layout_alignBaseline="@+id/Forgiveness"
        android:layout_alignBottom="@+id/Forgiveness"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Hope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hope"
        android:background="#FFCFA4"
        android:layout_above="@+id/Forgiveness"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Inspiration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Inspiration"
        android:background="#FFCFA4"
        android:layout_below="@+id/Peace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"/>

</RelativeLayout>
